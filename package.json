{
  "name": "webpack-node",
  "keywords": [],
  "author": "David Na Mills",
  "description": "Node project setup that includes: webpack, Typescript, jest, eslint, prettier, and jsdoc",
  "type": "module",
  "version": "1.0.0",
  "license": "ISC",
  "sideEffects": [],
  "main": "index.js",
  "scripts": {
    "docs": "jsdoc -c jsdoc.json",
    "eslint:test": "npx eslint ./tests/*.js",
    "eslint:src": "npx eslint ./src/*.js",
    "test:coverage": "env-cmd -f ./env/test.env jest --watchAll --coverage --verbose",
    "test:single": "env-cmd -f ./env/test.env jest --coverage --verbose",
    "test:basic": "env-cmd -f ./env/test.env jest --watchAll --verbose",
    "start:build-ts": "tsc -w",
    "start:run-nodemon": "nodemon build/index.js",
    "run:dev": "npm run test:single && env-cmd -f ./env/dev.env concurrently npm:start:*",
    "build:production": "npm run test:single && npm run eslint:src && env-cmd -f ./env/prod.env webpack --config ./webpack/production.webpack.js --mode production",
    "run-production": "node ./dist/production-server.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.2",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsdoc": "^27.0.4",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {}
}
